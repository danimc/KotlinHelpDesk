<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.danymc.helpdesk.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_nuevo_ticket"
            app:destination="@id/nuevo_ticket" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.danymc.helpdesk.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/nuevo_ticket"
        android:name="com.danymc.helpdesk.nuevo_ticket"
        android:label="nuevo_ticket" >
        <action
            android:id="@+id/action_nuevo_ticket_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>